{
  "publisher": "pathverse",
  "name": "slang-references",
  "displayName": "Slang References",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@10.4.1",
  "description": "VS Code extension that provides intelligent hover support for Dart/Flutter projects using the Slang i18n library",
  "author": "Pathverse",
  "license": "MIT",
  "homepage": "https://github.com/Pathverse/slang-references#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/Pathverse/slang-references"
  },
  "bugs": {
    "url": "https://github.com/Pathverse/slang-references/issues"
  },
  "keywords": [
    "dart",
    "flutter",
    "slang",
    "i18n",
    "internationalization",
    "hover",
    "translations"
  ],
  "categories": [
    "Programming Languages",
    "Other"
  ],
  "main": "./dist/index.js",
  "icon": "res/icon.png",
  "files": [
    "LICENSE.md",
    "dist/*",
    "res/*"
  ],
  "engines": {
    "vscode": "^1.97.0"
  },
  "activationEvents": [
    "onLanguage:dart"
  ],
  "contributes": {
    "commands": [
      {
        "command": "slangReferences.convertToTranslationWithCustomKey",
        "title": "Convert to Translation with Custom Key",
        "category": "Slang References"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Slang References",
      "properties": {
        "slangReferences.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable Slang References hover functionality"
        },
        "slangReferences.showDetailedInfo": {
          "type": "boolean",
          "default": false,
          "description": "Show additional information in hover tooltips (file path, variable type)"
        },
        "slangReferences.stringToTranslation.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable string literal to translation conversion feature"
        },
        "slangReferences.stringToTranslation.keyMaxLength": {
          "type": "number",
          "default": 20,
          "description": "Maximum length for auto-generated translation keys"
        },
        "slangReferences.stringToTranslation.caseStyle": {
          "type": "string",
          "enum": ["camelCase", "snake_case", "kebab-case", "PascalCase"],
          "default": "camelCase",
          "description": "Case style for generated translation keys"
        },
        "slangReferences.stringToTranslation.autoAddImport": {
          "type": "boolean",
          "default": true,
          "description": "Automatically add translation import when converting strings"
        }
      }
    }
  },
  "scripts": {
    "build": "tsdown src/index.ts --external vscode",
    "dev": "nr build --watch --sourcemap",
    "prepare": "nr update",
    "update": "vscode-ext-gen --output src/generated/meta.ts",
    "lint": "eslint .",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "vscode:prepublish": "nr build",
    "release": "bumpp",
    "ext:package": "vsce package --no-dependencies",
    "ext:publish": "vsxpub --no-dependencies"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.2.1",
    "@antfu/ni": "^23.3.1",
    "@types/node": "^22.13.4",
    "@types/vscode": "^1.97.0",
    "@vscode/vsce": "^3.2.2",
    "bumpp": "^10.0.3",
    "eslint": "^9.20.1",
    "esno": "^4.8.0",
    "ovsx": "^0.10.5",
    "pnpm": "^10.4.1",
    "reactive-vscode": "^0.2.10",
    "tsdown": "^0.9.6",
    "typescript": "^5.7.3",
    "vite": "^6.1.0",
    "vitest": "^3.0.5",
    "vscode-ext-gen": "^1.0.0",
    "vsxpub": "^0.1.0"
  },
  "dependencies": {
    "@types/js-yaml": "^4.0.9",
    "js-yaml": "^4.1.0"
  }
}
